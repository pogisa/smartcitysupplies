    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        function createSlider(divName) {
            $(divName).slider({
                range: "max",
                min: 1,
                max: 5,
                value: 3,
                slide: function (event, ui) {
                    $("#amount").val(ui.value);
                }
            });
            $("#amount").val($(divName).slider("value"));
        };
    </script>

    <script>
        createSlider("#sliderNonperishable");
        createSlider("#sliderBaked");
        createSlider("#sliderProduce");
        createSlider("#sliderMeat");
        createSlider("#sliderFrozen");
        createSlider("#sliderBaby");
        createSlider("#sliderClothing");
        createSlider("#sliderPet");
        createSlider("#sliderSchool");
    </script>
}

